<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- dialog -->
    <style name="popup_update" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="custom_popup_main" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/custom_popup_main_text_size</item>
        <item name="android:textColor">#262626</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="popup_title" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/custom_popup_title_text_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
